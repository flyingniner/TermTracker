<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SelectMentorActivity">

    <TextView
        android:id="@+id/select_mentor_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_a_mentor"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/select_mentor_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_mentor_label"
        tools:listitem="@layout/mentor_item"/>
</RelativeLayout>